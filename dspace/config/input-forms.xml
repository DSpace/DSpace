<?xml version="1.0"?>
<!DOCTYPE input-forms SYSTEM "input-forms.dtd">


<input-forms>

 <!-- The form-map maps collection handles to forms. DSpace does not       -->
 <!-- require a collection name to be unique, not even within a community. -->
 <!-- DSpace does however ensure that each collection's handle is unique.  -->
 <!-- Form-map provides the means to associate a unique collection name    -->
 <!-- with a form. The form-map also provides the special handle "default" -->
 <!-- (which is never a collection), here mapped to "traditional". Any     -->
 <!-- collection which does not appear in this map will be associated with -->
 <!-- the mapping for handle "default".                                    -->

 <form-map>
   <name-map collection-handle="default" form-name="traditional" />
   <name-map collection-handle="20.500.11930/1015" form-name="vsim-project" />
 </form-map>


 <!-- The form-definitions map lays out the detailed definition of all the -->
 <!-- submission forms. Each separate form set has a unique name as an     -->
 <!-- attribute. This name matches one of the names in the form-map. One   -->
 <!-- named form set has the name "traditional"; as this name suggests,    -->
 <!-- it is the old style and is also the default, which gets used when    -->
 <!-- the specified collection has no correspondingly-named form set.      -->
 <!--                                                                      -->
 <!-- Each form set contains an ordered set of pages; each page defines    -->
 <!-- one submission metadata entry screen. Each page has an ordered list  -->
 <!-- of field definitions, Each field definition corresponds to one       -->
 <!-- metadata entry (a so-called row), which has a DC element name, a     -->
 <!-- displayed label, a text string prompt which is called a hint, and    -->
 <!-- an input-type. Each field also may hold optional elements: DC        -->
 <!-- qualifier name, a repeatable flag, and a text string whose presence  -->
 <!-- serves as a 'this field is required' flag.                           -->
 <!-- valid input-types:  date, name, onebox, twobox, dropdown,            -->
 <!-- qualdrop_value                                                       -->

 <form-definitions>
   <form name="vsim-project">
     <page number="1">
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>title</dc-element>
         <repeatable>false</repeatable>
         <label>Project Title</label>
         <input-type>onebox</input-type>
         <hint>dc.title (required): This field is for the main title of your project (e.g., Digital Karnak or Virtual Turin). Please use appropriate title casing.</hint>
         <required>true</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier>abstract</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Project Abstract</label>
         <input-type>textarea</input-type>
         <hint>dc.description.abstract: Insert an abstract.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <repeatable>false</repeatable>
         <label>Project Description</label>
         <input-type>textarea</input-type>
         <hint>dc.description: Insert a description of this project.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>vsim</dc-schema>
         <dc-element>research</dc-element>
         <dc-qualifier>objective</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Research Objective</label>
         <input-type>textarea</input-type>
         <hint>vsim.research.objective: Describe the research objective of the project.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>relation</dc-element>
         <repeatable>true</repeatable>
         <label>Institutional Affiliation</label>
         <input-type>onebox</input-type>
         <hint>dc.relation: Insert the institution(s) associated with the project.</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>date</dc-element>
         <dc-qualifier>created</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Project Start Date</label>
         <input-type>date</input-type>
         <hint>dc.date.created: Insert the date this project was initiated. You can leave out the day and/or month if they aren't applicable.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier>sponsorship</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Funding</label>
         <input-type>textarea</input-type>
         <hint>dc.description.sponsorship: Provide details about this project's funders/
           sponsors.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>vsim</dc-schema>
         <dc-element>acknowledgements</dc-element>
         <dc-qualifier></dc-qualifier>
         <repeatable>false</repeatable>
         <label>Funding</label>
         <input-type>textarea</input-type>
         <hint>vsim.acknowledgements: List any acknowledgements required for this project</hint>
         <required></required>
       </field>
        <field>
         <dc-schema>vsim</dc-schema>
         <dc-element>bibliography</dc-element>
         <repeatable>false</repeatable>
         <label>Bibliography</label>
         <input-type>textarea</input-type>
         <hint>vsim.bibliography: Insert a bibliography for this project, either publications about the project or about the modeled environment. This field can be refined later.</hint>
         <required></required>
       </field>
     <field>
         <dc-schema>dc</dc-schema>
         <dc-element>coverage</dc-element>
         <dc-qualifier>spatial</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Coverage.Spatial</label>
         <input-type>onebox</input-type>
         <hint>dc.coverage.spatial: briefly describe the spacial characteristics
            of this project.</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>coverage</dc-element>
         <dc-qualifier>temporal</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Coverage.Temporal</label>
         <input-type>onebox</input-type>
         <hint>dc.coverage.temporal: briefly describe the temporal
           characteristics of this project.</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>vsim</dc-schema>
         <dc-element>keywords</dc-element>
         <repeatable>false</repeatable>
         <label>Keywords</label>
         <input-type>onebox</input-type>
         <hint>vsim.keywords: enter a comma-separated list of keywords for this
           project, to be used to improve search results</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>contributor</dc-element>
         <dc-qualifier>author</dc-qualifier>
         <repeatable>true</repeatable>
         <label>Author(s)</label>
         <input-type>name</input-type>
         <hint>dc.contributor.author: Enter the names of the author(s) of this project.</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>contributor</dc-element>
         <dc-qualifier></dc-qualifier>
         <repeatable>true</repeatable>
         <label>Contributor(s)</label>
         <input-type>name</input-type>
         <hint>dc.contributor: Enter the names of key contributors to this project.</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>vsim</dc-schema>
         <dc-element>contributor</dc-element>
         <dc-qualifier>details</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Contributor Details</label>
         <input-type>textarea</input-type>
         <hint>vsim.contributor.details: use this space to provide any additional information regarding the contributors to this project including roles and responsibilities of the various team members.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>contributor</dc-element>
         <dc-qualifier>advisor</dc-qualifier>
         <repeatable>true</repeatable>
         <label>Associated Advisors/Scientific Committee</label>
         <input-type>name</input-type>
         <hint>dc.contributor.advisor: Enter the names of advisors to this project.</hint>
         <required></required>
       </field>
        <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier>uri</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Description URI</label>
         <input-type>onebox</input-type>
         <hint>dc.description.uri: Insert the project URI/URL</hint>
         <required></required>
       </field>
      <field>
         <dc-schema>vsim</dc-schema>
         <dc-element>news</dc-element>
         <repeatable>false</repeatable>
         <label>News</label>
         <input-type>textarea</input-type>
         <hint>vsim.news: The news field is a freeform text entry field for project updates and news. This information will be displayed on the project community page, and can be updated as desired after project initialization.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>date</dc-element>
         <dc-qualifier>available</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Date of Availability</label>
         <input-type>date</input-type>
         <hint>dc.date.available: Please give the date this project was
           available for use (not previous publication or public distribution).
           You can leave out the day and/or month if they aren't
           applicable.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>rights</dc-element>
         <dc-qualifier>holder</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Rights Holder</label>
         <input-type>textarea</input-type>
         <hint>dc.rights.holder: Name the rights holder for this project</hint>
         <required>false</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>date</dc-element>
         <dc-qualifier>copyright</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Date of Copyright</label>
         <input-type>date</input-type>
         <hint>dc.date.copyright: Please give the copyright date this project.
           You can leave out the day and/or month if they aren't
           applicable.</hint>
         <required></required>
       </field>
      <field>
         <dc-schema>dc</dc-schema>
         <dc-element>rights</dc-element>
         <repeatable>false</repeatable>
         <label>Permissions and Reuse</label>
         <input-type>textarea</input-type>
         <hint>dc.rights: Input any specific restrictions or requirments pertaining to the use of content related to the project in publications.</hint>
         <required></required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>date</dc-element>
         <dc-qualifier>issued</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Date of Issue</label>
         <input-type>date</input-type>
         <hint>dc.date.issued: Please give the date of previous publication or public distribution.
                        You can leave out the day and/or month if they aren't
                        applicable.</hint>
         <required>You must enter at least the year.</required>
       </field>
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier>uri</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Description URI</label>
         <input-type>onebox</input-type>
         <hint>dc.description.uri: Insert a URI to a description of this
           project</hint>
         <required></required>
       </field>
     </page>
   </form>




   <form name="traditional">
     <page number="1">
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>contributor</dc-element>
         <dc-qualifier>author</dc-qualifier>
         <repeatable>true</repeatable>
         <label>Authors</label>
         <input-type>name</input-type>
         <hint>Enter the names of the authors of this item.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>title</dc-element>
         <dc-qualifier></dc-qualifier>
         <repeatable>false</repeatable>
         <label>Title</label>
         <input-type>onebox</input-type>
         <hint>Enter the main title of the item.</hint>
         <required>You must enter a main title for this item.</required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>title</dc-element>
         <dc-qualifier>alternative</dc-qualifier>
         <repeatable>true</repeatable>
         <label>Other Titles</label>
         <input-type>onebox</input-type>
         <hint>If the item has any alternative titles, please enter them
           here.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>date</dc-element>
         <dc-qualifier>issued</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Date of Issue</label>
         <input-type>date</input-type>
         <hint>dc.date.issued (required): Please give the date of previous
           publication or public distribution. You can leave out the day and/or
           month if they aren't applicable.</hint>
         <required>You must enter at least the year.</required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>publisher</dc-element>
         <dc-qualifier></dc-qualifier>
         <repeatable>false</repeatable>
         <label>Publisher</label>
         <input-type>onebox</input-type>
         <hint>Enter the name of the publisher of the previously issued
           instance of this item.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>identifier</dc-element>
         <dc-qualifier>citation</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Citation</label>
         <input-type>onebox</input-type>
         <hint>Enter the standard citation for the previously issued instance
           of this item.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>relation</dc-element>
         <dc-qualifier>ispartofseries</dc-qualifier>
         <repeatable>true</repeatable>
         <label>Series/Report No.</label>
         <input-type>series</input-type>
         <hint>Enter the series and number assigned to this item by your
           community.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>identifier</dc-element>
         <dc-qualifier></dc-qualifier>
         <!-- An input-type of qualdrop_value MUST be marked as repeatable -->
         <repeatable>true</repeatable>
         <label>Identifiers</label>
         <input-type value-pairs-name="common_identifiers">qualdrop_value</input-type>
         <hint>If the item has any identification numbers or codes associated with
it, please enter the types and the actual numbers or codes.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>type</dc-element>
         <dc-qualifier></dc-qualifier>
         <repeatable>true</repeatable>
         <label>Type</label>
         <input-type value-pairs-name="common_types">dropdown</input-type>
         <hint>Select the type(s) of content of the item. To select more than
           one value in the list, you may have to hold down the "CTRL" or
           "Shift" key.</hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>language</dc-element>
         <dc-qualifier>iso</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Language</label>
         <input-type value-pairs-name="common_iso_languages">dropdown</input-type>
         <hint>Select the language of the main content of the item.  If the
           language does not appear in the list, please select 'Other'.  If the
           content does not really have a language (for example, if it is a
           dataset or an image) please select 'N/A'.</hint>
         <required></required>
       </field>
     </page>

     <page number="2">
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>subject</dc-element>
         <dc-qualifier></dc-qualifier>
         <!-- An input-type of twobox MUST be marked as repeatable -->
         <repeatable>true</repeatable>
         <label>Subject Keywords</label>
         <input-type>twobox</input-type>
         <hint>Enter appropriate subject keywords or phrases. </hint>
         <required></required>
         <vocabulary>srsc</vocabulary>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier>abstract</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Abstract</label>
         <input-type>textarea</input-type>
         <hint>Enter the abstract of the item. </hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier>sponsorship</dc-qualifier>
         <repeatable>false</repeatable>
         <label>Sponsors</label>
         <input-type>textarea</input-type>
         <hint>Enter the names of any sponsors and/or funding codes in the
           box. </hint>
         <required></required>
       </field>

       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>description</dc-element>
         <dc-qualifier></dc-qualifier>
         <repeatable>false</repeatable>
         <label>Description</label>
         <input-type>textarea</input-type>
         <hint>Enter any other description or comments in this box. </hint>
         <required></required>
       </field>
     </page>
   </form>

   <form name="one">
     <page number="1">
       <field>
         <dc-schema>dc</dc-schema>
         <dc-element>contributor</dc-element>
         <dc-qualifier>author</dc-qualifier>
         <repeatable>true</repeatable>
         <label>One: Authors</label>
         <input-type>name</input-type>
         <hint>Enter the names of the authors of this item.</hint>
         <required></required>
       </field>
      </page>
    </form>
 </form-definitions>


 <!-- form-value-pairs populate dropdown and qualdrop-value lists.          -->
 <!-- The form-value-pairs element holds child elements named 'value-pairs' -->
 <!-- A 'value-pairs' element has a value-pairs-name and a dc-term          -->
 <!-- attribute. The dc-term attribute specifies which to which Dublin Core -->
 <!-- Term this set of value-pairs applies.                                 -->
 <!--     Current dc-terms are: identifier-pairs, type-pairs, and           -->
 <!--     language_iso-pairs. The name attribute matches a name             -->
 <!--     in the form-map, above.                                           -->
 <!-- A value-pair contains one 'pair' for each value displayed in the list -->
 <!-- Each pair contains a 'displayed-value' element and a 'stored-value'   -->
 <!-- element. A UI list displays the displayed-values, but the program     -->
 <!-- stores the associated stored-values in the database.                  -->

