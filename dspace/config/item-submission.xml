      <step id="upload" />
    </submission-process>
    <submission-process name="journal">
      <step id="collection" />
      <step id="journal" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="journal-edit">
      <step id="journal" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="publication">
      <step id="collection" />
      <step id="extractionstep" />
      <step id="publication" />
      <step id="publication_indexing" />
      <step id="publication_bibliographic_details" />
      <step id="publication_references" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="publication-edit">
      <step id="extractionstep" />
      <step id="publication" />
      <step id="publication_indexing" />
      <step id="publication_bibliographic_details" />
      <step id="publication_references" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="person">
      <step id="collection" />
      <step id="person" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="person-edit">
      <step id="person" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="admin-person-edit">
      <step id="person" />
      <step id="owner" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="event">
      <step id="collection" />
      <step id="event" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="event-edit">
      <step id="event" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="equipment">
      <step id="collection" />
      <step id="equipment" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="equipment-edit">
      <step id="equipment" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="patent">
      <step id="collection" />
      <step id="extractionstep" />
      <step id="patent" />
      <step id="patent_indexing" />
      <step id="patent_references" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="patent-edit">
      <step id="extractionstep" />
      <step id="patent" />
      <step id="patent_indexing" />
      <step id="patent_references" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="funding">
      <step id="collection" />
      <step id="funding" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="funding-edit">
      <step id="funding" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
  </submission-definitions>
</item-submission>

