		class="it.cilea.hku.authority.webui.components.BrowseItemListComponent">
		<property name="componentIdentifier" value="projectlist" />
		<property name="objectType" value="10" />
		<property name="types">
			<map>
				<entry key="selectedproject" value-ref="selectedProjectForOUComponent" />				
