			<list>
				<value>dc.type:Conference_Paper</value>
			</list>
		</property>
	</bean>
	
	<bean id="bookForOUComponent"
		class="it.cilea.hku.authority.webui.components.BeanComponent">
		<property name="componentIdentifier" value="book" />
		<property name="query"><value>dc.description.sponsorship_authority:{0} -hided:{0} -selected:{0}</value></property>
		<property name="order"><value>desc</value></property>
		<property name="rpp"><value>20</value></property>
		<property name="sortby"><value>1</value></property>		
		<property name="filters">
			<list>
				<value>dc.type:Book OR dc.type:Book_Chapter</value>
			</list>
		</property>
	</bean>
	
	<bean id="patentForOUComponent"
		class="it.cilea.hku.authority.webui.components.BeanComponent">
		<property name="componentIdentifier" value="patent" />
		<property name="query"><value>dc.description.sponsorship_authority:{0} -hided:{0} -selected:{0}</value></property>
		<property name="order"><value>desc</value></property>
		<property name="rpp"><value>20</value></property>
		<property name="sortby"><value>1</value></property>		
		<property name="filters">
			<list>
				<value>dc.type:Patent</value>
			</list>
		</property>
	</bean>
	
	<bean id="otherForOUComponent"
		class="it.cilea.hku.authority.webui.components.BeanComponent">
		<property name="componentIdentifier" value="other" />
		<property name="query"><value>dc.description.sponsorship_authority:{0} -hided:{0} -selected:{0}</value></property>
		<property name="order"><value>desc</value></property>
		<property name="rpp"><value>20</value></property>
		<property name="sortby"><value>1</value></property>		
		<property name="filters">
			<list>
				<value>-dc.type:Article</value>
				<value>-(dc.type:Book OR dc.type:Book_Chapter)</value>
				<value>dc.type:Conference_Paper</value>
				<value>-dc.type:Patent</value>
			</list>
		</property>
	</bean>
	
	<!-- Publication list for OU entity via RP -->
	<bean id="publicationlistforouviarp"
		class="it.cilea.hku.authority.webui.components.ItemsListComponent">
		<property name="componentIdentifier" value="publicationlistforouviarp" />
		<property name="objectType" value="2" />
		<property name="types">
			<map>
				<entry key="nestedrp" value-ref="nestedrpPublicationForOUComponent" />				
			</map>
		</property>
	</bean>
	
	
	<bean id="nestedrpPublicationForOUComponent"
		class="it.cilea.hku.authority.webui.components.BeanComponent">
		<property name="componentIdentifier" value="nestedrp" />
		<property name="query"><value>crisitem.author.dept:{0}</value></property>
		<property name="order"><value>asc</value></property>
		<property name="rpp"><value>20</value></property>		
	</bean>
	
	<!-- Person list for OU entity -->
	<bean id="personslist"
		class="it.cilea.hku.authority.webui.components.BrowseItemListComponent">
		<property name="componentIdentifier" value="personslist" />
		<property name="objectType" value="9" />
		<property name="types">
			<map>
				<entry key="persons" value-ref="personsForOUComponent" />				
			</map>
		</property>
	</bean>
	
	
	<bean id="personsForOUComponent"
		class="it.cilea.hku.authority.webui.components.BeanComponent">
		<property name="componentIdentifier" value="persons" />
