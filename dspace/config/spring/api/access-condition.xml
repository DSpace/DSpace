<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="uploadConfigurationDefault" class="org.dspace.submit.model.UploadConfiguration">
		<property name="name" value="upload"></property>
		<property name="configurationService" ref="org.dspace.services.ConfigurationService"/>
		<property name="metadata">
			<list>
                <ref local="fieldBitstreamName"/> 
                <ref local="fieldBitstreamDescription"/>			
			</list>
		</property>
        <property name="options">
            <list>
                <ref local="openAccess"/> 
                <ref local="lease"/>
                <ref local="embargoed" />
                <ref local="administrator"/>
                <ref local="networkAdministration"/>
            </list>
        </property>
    </bean>

    <bean id="fieldBitstreamName" class="org.dspace.submit.model.SubmissionFormField">
		<property name="selectableMetadata">
			<list>
				<bean class="org.dspace.submit.model.SelectableMetadata">
					<property name="metadata" value="dc.title"></property>
				</bean>
			</list>		
		</property>
    </bean>
    <bean id="fieldBitstreamDescription" class="org.dspace.submit.model.SubmissionFormField">
		<property name="selectableMetadata">
			<list>
				<bean class="org.dspace.submit.model.SelectableMetadata">
					<property name="metadata" value="dc.description"></property>
				</bean>
			</list>		
		</property>
    </bean>
    
    <bean id="openAccess" class="org.dspace.submit.model.AccessConditionOption">
        <property name="groupName" value="Anonymous"/>
        <property name="policyType" value="openaccess"/>
        <property name="hasDate" value="false"/>
    </bean>
    <bean id="lease" class="org.dspace.submit.model.AccessConditionOption">
        <property name="groupName" value="Anonymous"/>
        <property name="policyType" value="lease"/>
        <property name="hasDate" value="true"/>
        <property name="dateLimit" value="+1MONTHS"/>
    </bean> 
    <bean id="embargoed" class="org.dspace.submit.model.AccessConditionOption">
        <property name="groupName" value="Anonymous"/>
        <property name="policyType" value="embargo"/>
        <property name="hasDate" value="true"/>
        <property name="dateLimit" value="+6MONTHS"/>
    </bean> 
    <bean id="administrator" class="org.dspace.submit.model.AccessConditionOption">
        <property name="groupName" value="Administrator"/>
        <property name="policyType" value="administrator"/>
        <property name="hasDate" value="false"/>
    </bean>
    <bean id="networkAdministration" class="org.dspace.submit.model.AccessConditionOption">
    	<property name="groupName" value="INSTITUTIONAL_NETWORK"/>
        <property name="policyType" value="networkAdministration"/>
        <property name="hasDate" value="false"/>        
    </bean>

    <bean id="uploadConfigurationService" class="org.dspace.submit.model.UploadConfigurationService">
        <property name="map">
            <map>
                <entry key="upload" value-ref="uploadConfigurationDefault" />
            </map>
        </property>
    </bean>

</beans>
