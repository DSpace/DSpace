<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
	<bean class="org.dspace.app.bulkimport.service.ItemSearcherMapper" id="itemSearcherMapper">
		<constructor-arg index="0">
			<map>
				<entry key="UUID">
					<bean class="org.dspace.app.bulkimport.service.impl.ItemSearcherById"></bean>
				</entry>
				<entry key="ORCID">
					<bean class="org.dspace.app.bulkimport.service.impl.ItemSearcherByMetadata">
						<constructor-arg ref="org.dspace.discovery.SearchService"></constructor-arg>
						<constructor-arg value="person.identifier.orcid"></constructor-arg>
					</bean>
				</entry>
				<entry key="RID">
					<bean class="org.dspace.app.bulkimport.service.impl.ItemSearcherByMetadata">
						<constructor-arg ref="org.dspace.discovery.SearchService"></constructor-arg>
						<constructor-arg value="person.identifier.rid"></constructor-arg>
					</bean>
				</entry>
				<entry key="ISNI">
					<bean class="org.dspace.app.bulkimport.service.impl.ItemSearcherByMetadata">
						<constructor-arg ref="org.dspace.discovery.SearchService"></constructor-arg>
						<constructor-arg value="person.identifier.isni"></constructor-arg>
					</bean>
				</entry>
				<entry key="DOI">
					<bean class="org.dspace.app.bulkimport.service.impl.ItemSearcherByMetadata">
						<constructor-arg ref="org.dspace.discovery.SearchService"></constructor-arg>
						<constructor-arg value="dc.identifier.doi"></constructor-arg>
					</bean>
				</entry>
			</map>
		</constructor-arg>
		<constructor-arg index="1">
			<bean class="org.dspace.app.bulkimport.service.impl.ItemSearcherById"></bean>
		</constructor-arg>
	</bean>

 </beans>