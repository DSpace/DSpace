{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["grecaptcha"]
  },
  "files": [
    "src/main.browser.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/themes/**/*.module.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*.mock.ts",
    "src/**/*.test.ts",
    "src/**/*.stub.ts",
    "src/**/testing/*",
    "src/**/mocks/*"
  ],
  "angularCompilerOptions": {
    "entryModule": "./src/modules/app/browser-app.module#BrowserAppModule"
  }
}
