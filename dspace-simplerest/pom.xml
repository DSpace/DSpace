       <version>2.8.1</version>
      </plugin>
      <plugin>
       <groupId>org.codehaus.mojo</groupId>
       <artifactId>emma-maven-plugin</artifactId>
       <version>1.0-alpha-3</version>
      </plugin>
     </reportPlugins>
    </configuration>
   </plugin>
  </plugins>
